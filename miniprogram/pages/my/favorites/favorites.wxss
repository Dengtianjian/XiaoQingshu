/* miniprogram/pages/my/favorites/favorites.wxss */
@import "../../../source/wxss/form_common.wxss";
page {
  min-height: 100%;
}
.favorite-list {
  margin-top: 20rpx;
  padding: 0 var(--container-padding);
}
.favorite-box-item {
  display: grid;
  grid-template-columns: 80rpx auto 30rpx;
  align-items: center;
  position: relative;
  height: 80rpx;
  margin-bottom: 40rpx;
}
.favorite-box-item::after {
  position: absolute;
  bottom: -20rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: #f0f0f0;
  content: "";
}
.favorite-box-item-icon {
  height:80rpx;
  border-radius: var(--border-radius);
  overflow: hidden;
  background:#eee;
}
.favorite-box-item-main {
  margin-left: 16rpx;
}
.favorite-box-item-name {
  font-size: 28rpx;
  color: var(--font-color);
}
.favorite-box-item-bottom {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: var(--font-light-color);
}
.favorite-box-item-created-date {
  margin-left: 36rpx;
}
.favorite-box-item-view-icon {
  justify-self: flex-end;
  color: var(--font-light-color);
}
.create-favorite {
  position: fixed;
  bottom: 120rpx;
  right: var(--container-padding);
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  font-size: 44rpx;
  border-radius: 50%;
  background: var(--main-color);
}
/* 收藏夹浏览 */
.favorite-box-list {
  height:100%;
  overflow-y:scroll;
}
.favorites-browse-item {
  display:flex;
  justify-content: space-between;
  align-items:center;
  margin-bottom:var(--container-padding);
  padding:0 var(--container-padding);
  height:100rpx;
  border-bottom: 1px solid var(--light-color);
}
.favorites-browse-item-title {
  flex-grow:9;
  height:100rpx;
  line-height:100rpx;
  font-size: 28rpx;
  color: var(--font-color);
}
.favorites-browse-item-author {
  font-size: 24rpx;
  color: var(--font-light-color);
}
.favorites-browse-item-time {
  margin-left: 34rpx;
  font-size: 24rpx;
  color: var(--font-light-color);
}
.author-and-time-bottom {
  margin-top:10rpx;
}
.favorite-browse-item-remove {
  flex-grow:1;
  height:100rpx;
  line-height:100rpx;
  text-align:right;
  font-size:40rpx;
  color:var(--font-light-color);
}

/* 创建新的收藏夹弹窗 */
.create-favorite-form {
  position: relative;
  padding:var(--container-padding);
  min-height: 100%;
}
.create-favorite-form-icon-upload {
  display:flex;
}
.favorite-box-icon-upload {
  width: 100rpx;
  height: 100rpx;
  line-height:100rpx;
  text-align:center;
  font-size: 46rpx;
  color: var(--font-light-color);
  background: var(--light-color);
  border-radius: var(--border-radius);
}
.favorite-box-icon-preview {
  display: inline-block;
  margin-left: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: var(--border-radius);
}
.favorite-box-form-operate {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 80rpx;
  width: 100%;
}
.favorite-box-form-operate-item {
  padding: 10rpx 16rpx;
  width:300rpx!important;
  font-weight: 400;
  font-size:28rpx;
}

/* 弹窗的 收藏集信息 */
.album {
  position:relative;
  width:100%;
  height:360rpx;
}
.album .album-icon {
  position:relative;
  z-index:-1;
  width:100%;
  height:100%;
  filter:brightness(50%);
  background:#FFF;
}
.album .album-info-head-left {
  display:inline-block;
  width:510rpx;
}
.album .album-operate {
  display:inline-block;
  width:160rpx;
  text-align:right;
}
.album .album-operate-item {
  margin-left:20rpx;
  font-size:70rpx;
  color:rgba(255,255,255,0.68);
}
.album .album-info {
  position:absolute;
  top:0;
  padding:30rpx;
  width:100%;
  color:white;
}
.album .album-name {
  font-size:40rpx;
}
.album .album-info-bottom {
  margin-top:10rpx;
  font-size:28rpx;
}
.album .album-info-bottom-item {
  margin-right:20rpx;
}
.album .album-description {
  margin-top:20rpx;
  height:166rpx;
  overflow-y:scroll;
}