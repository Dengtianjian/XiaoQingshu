/* miniprogram/pages/my/favorites/favorites.wxss */
@import "../../../source/wxss/form_common.wxss";
page {
  min-height:100%;
}
.favorite-list {
  margin-top:20rpx;
  padding:0 var(--container-padding);
}
.favorite-box-item {
  display:grid;
  grid-template-columns:80rpx auto 30rpx;
  align-items:center;
  position:relative;
  height:80rpx;
  margin-bottom:40rpx;
}
.favorite-box-item::after {
  position:absolute;
  bottom:-20rpx;
  left:0;
  width:100%;
  height:2rpx;
  background:#F0F0F0;
  content:"";
}
.favorite-box-item-icon {
  border-radius:var(--border-radius);
  overflow:hidden;
}
.favorite-box-item-main {
  margin-left:16rpx;
}
.favorite-box-item-name {
  font-size:28rpx;
  color:var(--font-color);
}
.favorite-box-item-bottom {
  margin-top:6rpx;
  font-size:24rpx;
  color:var(--font-light-color);
}
.favorite-box-item-created-date {
  margin-left:36rpx;
}
.favorite-box-item-view-icon {
  justify-self: flex-end;
  color:var(--font-light-color);
}
.create-favorite {
  position:fixed;
  bottom:120rpx;
  right:var(--container-padding);
  width:100rpx;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  color:white;
  font-size:44rpx;
  border-radius:50%;
  background:var(--main-color);
}

.create-favorite-form {
  position:relative;
  min-height:100%;
}
.favorite-box-icon-upload {
  display:inline-block;
  width:100rpx;
  height:100rpx;
  font-size:88rpx;
  color:var(--font-light-color);
  background:var(--light-color);
  border-radius:var(--border-radius);
}
.favorite-box-icon-preview {
  display:inline-block;
  margin-left:20rpx;
  width:100rpx;
  height:100rpx;
  border-radius:var(--border-radius);
}
.favorite-box-form-operate {
  display:flex;
  align-items:center;
  position:absolute;
  bottom:0;
  left:0;
  height:80rpx;
  width:100%;
}
.favorite-box-form-operate-item {
  padding:0;
  height:60rpx;
  line-height:60rpx;
  font-weight:400;
}