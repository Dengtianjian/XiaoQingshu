/* miniprogram/pages/my/edit_profile/edit_profile.wxss */
@import "../../../source/wxss/form_common.wxss";
.chenge-avatar {
  position: relative;
  margin-top:26rpx;
  width:100%;
  text-align:center;
}
.change-avatar-preview {
  width:150rpx;
  height:150rpx;
  border-radius:50%;
}
.change-avatar-overlay {
  position:absolute;
  top:0;
  left:0;
  right:0;
  display:flex;
  align-items:center;
  margin:0 auto;
  width:150rpx;
  height:150rpx;
  line-height:150rpx;
  color:rgba(255,255,255,0.8);
  text-align:center;
  border-radius:50%;
  background:rgba(0,0,0,0.5);
  overflow:hidden;
}
.change-avatar-overlay-preview {
  opacity:0;
  width:0;
  font-size:50rpx;
}
.change-avatar-overlay-upload {
  flex-grow:1;
  font-size:50rpx;
  background:rgba(0,0,0,0.3);
}

/* 资料表单 */
.profile-form {
  margin:90rpx var(--container-padding) 0;
}
.profile-form-submit {
  margin-top:54rpx;
  font-weight:400;
}