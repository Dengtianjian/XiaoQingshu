<!-- miniprogram/pages/my/edit_profile/edit_profile.wxml -->
<view class="chenge-avatar">
  <image class="change-avatar-preview" src="{{ avatar }}" mode="aspectFill"></image>
  <view class="change-avatar-overlay">
    <view class="change-avatar-overlay-preview qcicon qcicon-viewlarger" bind:tap="pewviewAvatar"></view>
    <view class="change-avatar-overlay-upload qcicon qcicon-camera" bind:tap="changeAvatar"></view>
  </view>
</view>
<form class="profile-form form-common">
  <label class="form-common-item">
    <view class="form-common-item-title">昵称</view>
    <view class="form-common-item-el">
      <input type="text" name="nickname" id="" placeholder="请输入昵称" />
    </view>
  </label>
  <label class="form-common-item">
    <view class="form-common-item-title">邮箱地址</view>
    <view class="form-common-item-el">
      <input type="text" name="email" id="" placeholder="请输入邮箱地址" />
    </view>
  </label>
  <label class="form-common-item">
    <view class="form-common-item-title">真实姓名</view>
    <view class="form-common-item-el">
      <input type="text" name="realname" id="" placeholder="请输入真实姓名" />
    </view>
  </label>
  <label class="form-common-item">
    <view class="form-common-item-title">性别</view>
    <view class="form-common-item-el">
      <radio-group>
        <radio value="male" />
        男
        <radio value="female" />
        女
      </radio-group>
    </view>
  </label>
  <label class="form-common-item">
    <view class="form-common-item-title">生日</view>
    <view class="form-common-item-el">
      <picker mode="date" value="{{date}}" bindchange="bindDateChange">
        <view>当前选择: {{date}}</view>
      </picker>
    </view>
  </label>
  <label class="form-common-item">
    <view class="form-common-item-title">所在地</view>
    <view class="form-common-item-el">
      <picker mode="region" value="{{region}}" bindchange="bindRegionChange">
        <view>当前选择：{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
      </picker>
    </view>
  </label>
  <button class="profile-form-submit" type="primary" form-type="submit" style="padding:0;width:100%;height:70rpx;line-height:70rpx;">
    保存
  </button>
</form>