  </label>
  <label class="form-common-item">
    <view class="form-common-item-title">手机号码</view>
    <view class="form-common-item-el">
      <input type="number" name="phone_number" value="{{ userInfo['phone_number'] }}" placeholder="请输入手机号码" />
    </view>
  </label>
  <label class="form-common-item">
    <view class="form-common-item-title">真实姓名</view>
    <view class="form-common-item-el">
      <input type="text" name="realname" value="{{ userInfo['realname'] }}" placeholder="请输入真实姓名" />
    </view>
  </label>
