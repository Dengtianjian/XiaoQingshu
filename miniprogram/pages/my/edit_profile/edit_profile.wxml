  <label class="form-common-item">
    <view class="form-common-item-title">生日</view>
    <view class="form-common-item-el">
      <picker mode="date" name="birthday" value="{{userInfo['birthday']}}" bindchange="bindDateChange">
        {{userInfo['birthday']}}
      </picker>
    </view>
  </label>
  <label class="form-common-item">
    <view class="form-common-item-title">个人说明</view>
    <view class="form-common-item-el">
      <textarea name="statement" placeholder="让同学们更容易了解你🌞" value="{{ userInfo['statement'] }}"></textarea>
    </view>
  </label>
  <label class="form-common-item">
    <view class="form-common-item-title">学历</view>
    <view class="form-common-item-el">
      <input type="text" name="education" value="{{ userInfo['education'] }}" placeholder="请填写最高学历" />
    </view>
  </label>
