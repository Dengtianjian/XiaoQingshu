/* miniprogram/pages/my/space/space.wxss */
.head-background {
  position:absolute;
  z-index:-1;
  top:0;
  left:0;
  width:100%;
  height:560rpx;
  filter:grayscale(20%);
}
.user-wrap {
  display:grid;
  grid-template-columns: 140rpx auto 100rpx;
  align-items:center;
  margin-top:66rpx;
  padding:0 var(--container-padding);
}
.user-avatar {
  width:140rpx;
  height:140rpx;
  border-radius:50%;
}
.user-info {
  margin-left:32rpx;
  text-shadow: 0 4rpx 6rpx rgba(30,30,30,0.8);
  color:#ffffff;
}
.user-nickname {
  font-size: 36rpx;
}
.user-age {
  margin-top:20rpx;
  font-size:32rpx;
}
.user-attention-button {
  width:100rpx;
  height:50rpx;
  line-height:50rpx;
  color:#ffffff;
  font-size:24rpx;
  text-align:center;
  border-radius:var(--border-radius);
  background:var(--main-color);
}

.school-info {
  position:relative;
  z-index:2;
  margin:44rpx auto 0;
  padding:20rpx;
  width:var(--container-width);
  border-radius:var(--border-radius);
  background:#ffffff;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.2);
}
.school-name {
  font-size:36rpx;
  color:var(--font-color);
}
.school-class {
  margin-top:8rpx;
  color:var(--font-light-color);
  font-size:28rpx;
}
.user-statement {
  margin-top:26rpx;
  color:var(--font-light-color);
  font-size:28rpx;
}
.post-wrap {
  position:relative;
  z-index:1;
  padding: 160rpx var(--container-padding) var(--container-padding);
  margin-top:-126rpx;
  width:100%;
  min-height:200rpx;
  background:#ffffff;
  border-radius:var(--border-radius) var(--border-radius) 0 0;
}