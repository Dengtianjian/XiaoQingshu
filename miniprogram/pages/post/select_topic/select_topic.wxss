/* pages/post/select_topic/select_topic.wxss */
.search {
  display: flex;
  align-items: center;
  margin: 0 var(--container-padding);
  padding: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: var(--border-radius);
  background: var(--light-color);
}
.search .search-icon {
  width: 46rpx;
  font-size: 40rpx;
}
.search .search-input {
  width: 100%;
}
.topic-list {
  padding: 0 var(--container-padding);
  margin-top: 20rpx;
}
.topic-list .topic-item {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: var(--font-color);
  border-bottom: 1px solid var(--light-color);
}
