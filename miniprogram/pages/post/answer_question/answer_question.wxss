/* pages/answer_question/answer_question.wxss */
page {
  height:100%;
}
.post-title {
  padding:0 var(--container-padding);
  margin-top:20rpx;
  font-size:32rpx;
  font-weight:bold;
  color:var(--font-color);
}

.answer-question-editor-container {
  margin:40rpx 0 56rpx 0;
  padding:0 var(--container-padding);
}
.answer-question-editor-container-editor {
  width: 100%;
  height:100%;
  line-height: 1.5;
  min-height:100rpx;
  font-size: 16px;
  overflow: auto;
  box-sizing: border-box;
}
.editor-toolbar {
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:50rpx;
  overflow-x:scroll;
  white-space:nowrap;
  background:var(--light-color);
}
.editor-boolbar-item {
  display:inline-block;
  height:50rpx;
  line-height:50rpx;
  width:60rpx;
  color:var(--font-color2);
  font-size:28rpx;
  text-align:center;
}
.editor-boolbar-item-active {
  color:var(--main-color);
}