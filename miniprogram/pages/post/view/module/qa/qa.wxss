.post-content-hide {
  height:40rpx;
  overflow:hidden;
}
.post-show-content {
  width:100%;
  height:60rpx;
  line-height:60rpx;
  font-size:28rpx;
  text-align:center;
  color:var(--font-light-color);
}
.post-qa .post-images {
  grid-template-columns: repeat(6,110rpx);
}
.post-qa .post-images .post-image-item {
  width:100rpx;
  height:100rpx;
}

.comment-item  {
  margin-bottom:50rpx;
}
.comment-item-bottom {
  margin:10rpx 0 0 80rpx;
  display:flex;
  justify-content: space-between;
}
.comment-vote {
  display:flex;
  font-size:24rpx;
  color:var(--main-color);
}
.comment-vote-item {
  margin-right:10rpx;
  padding:4rpx 12rpx;
  background:rgb(208, 255, 231);
  border-radius:6rpx;
}
.comment .comment-view-reply {
  margin-left:20rpx;
}