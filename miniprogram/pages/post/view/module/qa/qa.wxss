.post-content-hide {
  height:40rpx;
  overflow:hidden;
}
.post-show-content {
  width:100%;
  height:60rpx;
  line-height:60rpx;
  font-size:28rpx;
  text-align:center;
  color:var(--font-light-color);
}
.post-qa .post-images {
  grid-template-columns: repeat(6,110rpx);
}
.post-qa .post-images .post-image-item {
  width:100rpx;
  height:100rpx;
}