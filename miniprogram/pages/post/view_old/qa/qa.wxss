
/* 作者 */
.author {
  display: grid;
  grid-template-columns: 72rpx auto 110rpx;
  align-items: center;
  padding: 0 var(--container-padding);
  height: 72rpx;
}
.author .author-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}
.author .author-info {
  margin-left: 18rpx;
}
.author .author-info .author-nickname {
  font-size: 28rpx;
  color: var(--font-color);
}
.author .author-info .author-school {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: var(--font-light-color);
}
.author .author-info .author-school-prefession {
  margin-left: 10rpx;
}
.author .author-attention {
  justify-self: right;
  margin-left: 10rpx;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: var(--border-radius);
  background: var(--main-color);
}
.author .author-attention.author-attention-yes {
  color: var(--main-color);
  border: 2rpx solid var(--main-color);
  background: none;
}
/* 帖子 */
.post {
  padding: 0 var(--container-padding) 20rpx;
  margin-top: 20rpx;
  border-bottom: 2rpx solid var(--light-color);
  /* 帖子操作 */
}

/* 帖子状态 */
.post .post-status {
  display:block;
  margin-bottom:20rpx;
}

.post .post-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--font-color);
}
.post .post-content {
  margin-top: 20rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  color: var(--font-color2);
}
.post .post-images {
  display: grid;
  grid-template-columns: repeat(3, 216rpx);
  justify-content: space-between;
  margin-top: 20rpx;
}
.post .post-images .post-image-item {
  margin-bottom: 14rpx;
  width: 216rpx;
  height: 216rpx;
  border-radius: var(--border-radius);
  border: 1px solid #eee;
}
.post .post-attribute {
  margin-top: 10rpx;
}
.post .post-attribute .post-attribute-item {
  margin-right: 16rpx;
}
.post .post-operate {
  margin-top: 24rpx;
  height: 70rpx;
}
.post .post-operate .post-operate-item {
  display: inline-block;
  width: 33.3%;
  height: inherit;
  line-height: 70rpx;
  text-align: center;
  color: var(--font-light-color);
  font-size: 28rpx;
}
.post .post-operate .post-operate-item.post-operate-highlight {
  color: var(--main-color);
}
.post .post-operate .post-operate-item-icon {
  font-size: 34rpx;
}
.post-operate-share-button {
  display: inline;
  padding: 0;
  margin: 0;
  font-size: 28rpx;
  color: var(--font-light-color);
  background: none;
}
/* 收藏夹列表 */
.album-list {
  height:100%;
  text-align: left;
  overflow-y:scroll;
}
.album-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
  height: 60rpx;
  font-size: 30rpx;
}
.ablum-item-count {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: var(--font-light-color);
}
.ablum-item-select {
  color: var(--main-color);
}

.post .post-publish-date {
  margin-top: 32rpx;
  font-size: 24rpx;
  color: var(--font-light-color);
  text-align: center;
}
/* 评论 */
.comment {
  margin-top: 27rpx;
  margin-bottom: 40rpx;
  padding: 0 var(--container-padding);
  /* 回复 */
}
.comment .comment-title {
  margin-bottom: 24rpx;
  font-size: 40rpx;
  color: var(--font-color);
}
.comment .comment-view-reply {
  margin: 10rpx 0 0 80rpx;
  color: var(--main-color);
  font-size: 24rpx;
}
.comment-item {
  margin-bottom: 30rpx;
}
/* 评论帖子悬浮窗 */
.comment-post-tips {
  position: fixed;
  z-index: 21;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: var(--font-color2);
  border-top: 2rpx solid #ddd;
  background: #ffffff;
}
.comment-post-placeholder {
  padding: 0;
  width: 100%;
  height: 100rpx;
  background: #ffffff;
}
/* 评论弹窗 */
.navigation-close-button {
  width:80rpx;
  font-size:54rpx;
  color:var(--font-light-color);
}
.navigation-question-title {
  display:inline-block;
  width:62%;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space: nowrap;
}
.comment-post-popup {
  position: fixed;
  z-index: 40;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.comment-post-popup .comment-post-form {
  position: absolute;
  z-index: 42;
  left: 0;
  right: 0;
  padding: var(--container-padding);
  margin: 0 auto;
  width: 100%;
  background: #ffffff;
  border-radius: 0 0 30rpx 30rpx;
  box-sizing: border-box;
}
.comment-post-popup .comment-post-form .comment-post-form-content {
  padding: 16rpx;
  height: 400rpx;
  width: 100%;
  border-radius: var(--border-radius);
  background: var(--light-color);
  box-sizing: border-box;
}
.comment-post-popup .comment-post-form .comment-post-form-submit {
  margin-top: 40rpx;
}
.comment-post-popup .comment-post-popup-mask {
  position: absolute;
  z-index: 41;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}
.comment-reply-operate-item {
  position:fixed;
  bottom:20rpx;
  width:80rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:40rpx;
  border-radius:50%;
  background:#eee;
}
.comment-reply-close {
  left:20rpx;
}
.comment-reply-button {
  right:20rpx;
  color:rgba(255,255,255,0.6);
  background:var(--main-color);
}

.comment-reply-content {
  padding-bottom:70rpx;
  height: 100%;
  overflow: hidden;
}
.comment-reply-scroll {
  height: 100%;
  overflow-y: scroll;
}
.comment-reply-current {
  display: block;
  padding:var(--container-padding);
  border-bottom:10rpx solid #eee;
}
.comment-reply-item {
  display: block;
  padding:var(--container-padding);
  border-bottom:1px solid #eee;
}
.comment-reply-reply {
  margin-right:20rpx;
  color:var(--font-light-color);
}

.post-content-hide {
  height:40rpx;
  overflow:hidden;
}
.post-show-content {
  width:100%;
  height:60rpx;
  line-height:60rpx;
  font-size:28rpx;
  text-align:center;
  color:var(--font-light-color);
}
.post-qa .post-images {
  grid-template-columns: repeat(6,110rpx);
}
.post-qa .post-images .post-image-item {
  width:100rpx;
  height:100rpx;
}

.comment-item  {
  margin-bottom:50rpx;
}
.comment-item-bottom {
  margin:10rpx 0 0 80rpx;
  display:flex;
  justify-content: space-between;
}
.comment-vote {
  display:flex;
  font-size:24rpx;
  color:var(--main-color);
}
.comment-vote-item {
  margin-right:10rpx;
  padding:4rpx 12rpx;
  background:rgb(208, 255, 231);
  border-radius:6rpx;
}
.comment-vote-is-selected {
  padding:4rpx 48rpx;
}
.comment .comment-view-reply {
  margin-left:20rpx;
}