.publish-post-form {
  margin-top: 30rpx;
  padding: 0 var(--container-padding) 40rpx;
}
.publish-post-form .publish-post-title {
  width:100%;
  height:150rpx;
  font-size: 38rpx;
  color: var(--font-color);
}
.publish-post-form .publish-post-content {
  margin-top: 24rpx;
  height: 690rpx;
  width: 100%;
  font-size: 32rpx;
  color: var(--font-color2);
}
.image-upload {
  margin-top: 20rpx;
}
.image-upload .image-upload-list {
  display: inline-block;
  width: 520rpx;
  height: 160rpx;
  overflow-x: scroll;
  white-space: nowrap;
}
.image-upload .image-upload-item {
  display: inline-block;
  margin-right: 8rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--border-radius);
  border: 2rpx solid #eee;
}
.image-upload .image-upload-button {
  display: inline-block;
  margin-left: 10rpx;
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  color: var(--font-light-color);
  font-size: 76rpx;
  border-radius: var(--border-radius);
  background: #F0F0F0;
  vertical-align: top;
}
/* 帖子选项 */
.post-option {
  margin-top: 24rpx;
}
.post-option-item {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: var(--font-color2);
  border-bottom: 1px solid #F0F0F0;
}
.post-option-item .post-option-item-title {
  padding-right: 10rpx;
  min-width: 110rpx;
  line-height: inherit;
}
.post-option-item .post-option-item-content {
  width: 100%;
  line-height: inherit;
}
button[type='primary'] {
  margin-top: 60rpx;
  width: 690rpx;
}
.publish-form-submit {
  margin-top:20rpx;
}

/* 内容检查违规提示 */
.content-check-prompt {
  margin-top:30rpx;
  font-size:28rpx;
  color:var(--font-light-color);
}
.content-check-result-keyword {
  color:red;
}