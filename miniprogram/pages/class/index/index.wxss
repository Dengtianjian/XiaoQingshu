/* 学校信息 */
.class-info {
  padding: var(--container-padding);
}
.class-info .class-name {
  color: #ffffff;
  font-size: 36rpx;
}
.class-info .class-statistics {
  display: block;
  margin-top: 20rpx;
  width: 60%;
}
.head-background {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 570rpx;
  overflow: hidden;
  background: #3192FF;
}
.head-background .head-background-image {
  margin: -10% 0 0 -10%;
  width: 120%;
  height: 120%;
  filter: blur(20rpx);
}
.head-background .head-background-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40%;
  background: linear-gradient(to top, #ffffff, transparent);
}
.radius-container {
  margin: 20rpx 0 0;
  padding: var(--container-padding);
  min-height: 300rpx;
  background: #ffffff;
  border-radius: 30rpx 30rpx 0 0;
}
.album-entry {
  height: 100rpx;
  width: 100%;
}
.album-entry .album-entry-images {
  height: 100rpx;
  width: 100%;
}
.album-list {
  display: grid;
  grid-template-columns: repeat(5, 130rpx);
  justify-content: space-between;
  margin-top: 12rpx;
}
.album-list .album-item {
  height: 130rpx;
  width: 130rpx;
  border-radius: var(--border-radius);
  border: 1px solid var(--light-color);
}
.classmate {
  margin-top: 40rpx;
  padding: 0 0 100rpx;
  /* 信息弹窗 */
}
.classmate .classmate-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 26rpx;
  height: 80rpx;
}
.classmate .classmate-item .classmater-item-left {
  display: flex;
  align-items: center;
}
.classmate .classmate-item .classmater-item-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--border-radius);
}
.classmate .classmate-item .classmate-item-nickname {
  margin-left: 16rpx;
  font-size: 32rpx;
  color: var(--font-color);
}
.classmate .classmate-item .classmate-item-rightarrow {
  color: var(--font-light-color);
}
.classmate .edit-my-info {
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  justify-content: center;
  font-size: 24rpx;
  color: var(--font-light-color);
  background: var(--light-color);
  border-radius: var(--border-radius);
}
.classmate .classmate-info-popup {
  position: fixed;
  top: 0;
  bottom: 0;
  z-index: 20;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--container-padding);
  margin: auto;
  width: 694rpx;
  height: 830rpx;
  border-radius: var(--border-radius);
  background: #ffffff;
}
.classmate .classmate-info-popup .classmate-info-avatar {
  margin-top: 25rpx;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
}
.classmate .classmate-info-popup .classmate-info-name {
  margin-top: 16rpx;
  font-size: 60rpx;
  color: var(--font-color2);
}
.classmate .classmate-info-popup .classmate-info-gender {
  position: relative;
  top: -44rpx;
  right: -46rpx;
}
.classmate .classmate-info-popup .classmate-info-list {
  margin-top: 44rpx;
}
.classmate .classmate-info-popup .classmate-info-list .classmate-info-item {
  margin-bottom: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.classmate .classmate-info-popup .classmate-info-list .classmate-info-item-title {
  display: inline-block;
  min-width: 148rpx;
  text-align: justify;
  text-align-last: justify;
  font-size: 32rpx;
  color: var(--font-light-color);
}
.classmate .classmate-info-popup .classmate-info-list .classmate-info-item-content {
  display: inline-block;
  margin-left: 20rpx;
  font-size: 40rpx;
  color: var(--font-color);
}
.classmate .classmate-info-popup-mask {
  position: fixed;
  z-index: 19;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
}
