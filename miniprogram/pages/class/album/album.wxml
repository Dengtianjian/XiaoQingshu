<!-- pages/class/album/album.wxml -->
<Tabs tabs="{{ tabs }}" current="photo" swiperHeight="{{ swiperHeight }}" >
  <view class="album-list album-list-photo" slot="photo">
  <view class="album-item album-upload qcicon qcicon-upload" bindtap="uploadPhoto"></view>
    <block wx:for="{{ photo.list }}">
      <image class="album-item" src="{{ item._fileid }}" mode="aspectFill" bindtap="previewPhoto" data-index="{{ index }}" bindlongpress="deletePhoto" wx:if="{{ item!='deleted' }}" lazy-load></image>
    </block>
  </view>
  <view class="album-list" slot="video">
    <view class="album-item album-upload qcicon qcicon-upload" bindtap="uploadVideo"></view>
    <block wx:for="{{ videos }}">
      <image class="album-item" src="{{ item.cover }}" mode="aspectFill" bindtap="previewVideo" data-index="{{ index }}" wx:if="{{ item!='deleted' }}"></image>
    </block>
  </view>
</Tabs>
<view class="preview-video" catch:touchmove hidden="{{ hiddenPreviewVideoPopup }}">
  <video class="preview-video-source" src="{{ currentPreviewVideo }}"></video>
  <view class="preview-video-mask" catch:touchmove bindtap="cancelPreviewVideo"></view>
</view>