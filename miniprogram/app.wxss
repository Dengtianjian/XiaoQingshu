@import "./material/icon/iconfont.wxss";

page {
  position: relative;
  z-index: 9999998;
  background: #fff;
  min-height:100%;

  --container-padding:30rpx;
  --container-width:calc( 100% - (var(--container-padding) * 2) );
  --main-color:#07C160;
  --red:#F4B0AE;
  --font-color:#333333;
  --font-color2:#666666;
  --font-light-color:#999999;
  --border-radius:10rpx;
  --light-color:#F0F0F0;
}

view,text {
  box-sizing: border-box;
}

form {
  display:block;
}

/* 按钮样式重写 */
button,.button-common {
  padding:10rpx 16rpx!important;
  margin-left:unset!important;
  margin-right:unset!important;
  width:auto!important;
  font-weight:400!important;
  font-size:28rpx!important;
  color:white;
  background-color:var(--main-color);
}

/* 页面提示 */
.page-prompt {
  display:block;
  margin:0 auto;
  width:70%;
}