/* components/popup/popup.wxss */
.popup {
  position:absolute;
  top:0;
  left:0;
  width:100%;
  min-height:100%;
}
.popup-overlay {
  position:absolute;
  z-index:30;
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,0.2);
}
.popup-content {
  position:fixed;
  z-index:31;
  padding:var(--container-padding);
  background:white;
}