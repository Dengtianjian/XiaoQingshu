<template name="comment">
  <view class="comment-author">
    <image class="comment-author-avatar" src="https://imgavater.ui.cn/avatar/6/2/6/3/113626.png?imageMogr2/auto-orient/crop/!960x960a94a79/thumbnail/148x148"></image>
