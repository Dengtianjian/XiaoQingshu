/* components/PostStatus/PostStatus.wxss */
.post-status {
  padding:0 12rpx;
  width:100%;
  height:50rpx;
  line-height:50rpx;
  color:#333;
  font-size:28rpx;
  border-radius:6rpx;
  background:var(--light-color);
}
.post-status-primary {
  border-radius:6rpx 6rpx 0 0;
  color:#0084FF;
  background:#E5F2FF;
}
.post-status-warning {
  border-radius:6rpx 6rpx 0 0;
  color:#FF5D02;
  background:rgb(252, 227, 212);
}
.post-evil-keywords {
  padding:12rpx;
  font-size:28rpx;
  color:#999;
  border-radius:0 0 6rpx 6rpx;
  background:#F0F0F0;
}