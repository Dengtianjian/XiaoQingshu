/* components/popup/popup.wxss */
/* 弹窗 */
.popup {
  position:fixed;
  z-index:30;
  top:0;
  left:0;
  width:100%;
  height:100%;
}

.popup-mask {
  position:absolute;
  z-index:31;
  left:0;
  top:0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.2);
}
.popup-mask-transparent {
  position:absolute;
  z-index:-1;
  left:0;
  top:0;
  width:100%;
  height:100%;
  background:white;
}

.popup-content {
  position:absolute;
  z-index:100;
  bottom:0;
  left:0;
  width:100%;
  min-height:200rpx;
  background:white;
  border-radius:30rpx 30rpx 0 0;
}
.popup-content-shadow {
  box-shadow:-6rpx 0 10rpx rgba(0,0,0,0.2);
}