.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  padding:5px;
  width: 20px;
  height: 20px;
  border:1px solid #ddd;
  border-radius:50%;
}
.tab-bar-item-active cover-image {
  background:red;
  border-color:blue;
}

.tab-bar-item cover-view {
  font-size: 10px;
}
