/* pages/class/album/album.wxss */
page{
  background-color: #FFFFFF;
  height: 100%;
}

mp-video-swiper {
  width:690rpx;
  height: 100%;
}
.container {
  padding:0 var(--container-padding);
}
.album-list {
  display:grid;
  justify-content: space-between;
  grid-template-columns:repeat(4,162rpx);
}
.album-item {
  margin-bottom:12rpx;
  height:162rpx;
  width:162rpx;
  border-radius:var(--border-radius);
}

.preview-video {
  position:fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
}
.preview-video-source {
  position: absolute;
  z-index:21;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
}
.preview-video-mask {
  position:fixed;
  z-index:20;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.6);
}