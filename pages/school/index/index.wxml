<!-- pages/school.wxml -->
<!-- 顶部导航栏 -->
<block wx:if="{{ true }}">
  <NavigationBar pageScrollTop="{{ pageScrollTop }}" backgroundColor="blue" opacity="0.8">
    <view class="switch-school">
      <text class="qcicon qcicon-qiehuan switch-school-icon"></text>
      华南师范大学
    </view>
  </NavigationBar>
  <view class="school-info">
    <view class="school-info-left">
      <view class="school-info-name">2018届 软件工程</view>
      <view class="school-info-statictics">
        <view class="school-info-statictics-item">
          <view class="school-info-statictics-item-count">1K</view>
          <view class="school-info-statictics-item-title">人数</view>
        </view>
        <view class="school-info-statictics-item">
          <view class="school-info-statictics-item-count">1234</view>
          <view class="school-info-statictics-item-title">帖子</view>
        </view>
        <view class="school-info-statictics-item">
          <view class="school-info-statictics-item-count">3</view>
          <view class="school-info-statictics-item-title">人数</view>
        </view>
      </view>
    </view>
    <image class="school-info-logo" src="https://dss2.bdstatic.com/6Ot1bjeh1BF3odCf/it/u=3468775424,3129958234&fm=74&app=80&f=GIF&size=f121,121?sec=1880279984&t=e43e103c4d4dc7171d2bb9b18d156772"></image>
  </view>
  <image class="navigator-bar-background" src="/material/images/school_head_default_background.png"></image>

  <view class="container">
    <navigator class="pinche-entry" open-type="navigate" url="" hover-class="">
      <image class="pinche-entry-banner" src="/material/images/school_pinche_entry.png" mode="aspectFill"></image>
    </navigator>

    <Tabs class="post-list" current="0" tabs="{{ {all:'全部',qa:'问答',note:'笔记'} }}">
      <view slot="all">
        <block wx:for="{{ 5 }}" wx:key="index">
          <PostCoverItem/>
        </block>
      </view>
      <view slot="qa">问答</view>
      <view slot="note">笔记</view>
    </Tabs>
  </view>
</block>
<block wx:else>
  <!-- 图片&加入学校按钮 -->
  <view class="not-join-school">
    <image class="not-join-school-image" src="/material/images/school_center_picture.png"></image>
    <navigator class="not-join-school-selectschool-entry" open-type="navigate" url="/pages/school/select_school/select_school">
      选择学校
    </navigator>
  </view>
</block>